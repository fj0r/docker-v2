FROM nnurphy/v2ray

###### s6
ARG httpbin_url=https://iffy.me/pub/httpbin.tar.gz
ARG s6url=https://github.com/just-containers/s6-overlay/releases/download/v1.22.1.0/s6-overlay-amd64.tar.gz
RUN set -ex \
  ; sed -i 's/\(.*\)\(security\|deb\).debian.org\(.*\)main/\1ftp.cn.debian.org\3main contrib non-free/g' /etc/apt/sources.list \
  ; apt-get update \
  ; apt-get install -y --no-install-recommends \
      tzdata \
      curl \
      nginx \
      jq \
  ; apt-get autoremove -y && apt-get clean -y && rm -rf /var/lib/apt/lists/* \
  \
  ; ln -sf /usr/share/zoneinfo/$TIMEZONE /etc/localtime \
  ; echo "$TIMEZONE" > /etc/timezone \
  \
  ; curl --fail --silent -L ${s6url} | tar xzvf - -C / \
  ; sed -i '1i\daemon off;' /etc/nginx/nginx.conf \
  ; rm -rf /etc/nginx/sites-available/* \
  ; rm -rf /etc/nginx/sites-enabled/* \
  \
  ; mkdir /pub \
  ; ln -s /pub /srv/pub \
  ; curl ${httpbin_url} | tar zxvf - -C /usr/bin


COPY services.d /etc/services.d
COPY 01-gen-token /etc/cont-init.d

ENV PATH /usr/bin/v2ray:$PATH
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY client.json /etc/v2ray/client.json

ENTRYPOINT [ "/init" ]